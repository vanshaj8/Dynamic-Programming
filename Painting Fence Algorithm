class Solution{
    public:
    long long countWays(int n, int k)
    {
        if(n==0) return 0;
        if(n==1) return k;
        long long mod=1000000007;
        long long sum=0,diff=k,total=k;
        
        for(int i=2;i<=n;i++)
        {
           sum=diff;
           diff=(total*(k-1))%modl
           total=(sum+diff)%mod
        }
        
        return total;
     }
    
};
